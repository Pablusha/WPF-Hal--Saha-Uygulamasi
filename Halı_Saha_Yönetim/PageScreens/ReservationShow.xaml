<Page x:Class="Halı_Saha_Yönetim.PageScreens.ReservationShow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Halı_Saha_Yönetim.PageScreens"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ReservationShow">

    <Grid Background="{DynamicResource {x:Static SystemColors.MenuHighlightBrushKey}}">
        <DataGrid Name="dataGridSaha" HorizontalAlignment="Left" AutoGenerateColumns="False" Height="286" Margin="88,63,0,0" VerticalAlignment="Top" Width="516">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding RezID}" Header="RezID" />
                <DataGridTextColumn Binding="{Binding SahaID}" Header="SahaID" />
                <DataGridTextColumn Binding="{Binding Tarih}" Header="Tarih" />
                <DataGridTextColumn Binding="{Binding Saat}" Header="Saat" />
                <DataGridTextColumn Binding="{Binding Durum}" Header="Durum" />
                <DataGridTextColumn Binding="{Binding Not}" Header="Not" />

            </DataGrid.Columns>
        </DataGrid>
        <Label Content="REZERVASYONLAR" FontSize="30" HorizontalAlignment="Left" Margin="208,4,0,0" VerticalAlignment="Top" Background="#FF4DD1C5"  />
    </Grid>
</Page>
